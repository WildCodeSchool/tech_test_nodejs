{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended"],
  "rules": {
    "no-unused-vars": 2,
    "no-trailing-spaces": 2,
    "prefer-template": 2,
    "quotes": [2, "single", { "avoidEscape": true }],
    "semi": [2, "never"],
    "indent": [2, 2],
    "object-curly-spacing": [2, "always"],
    "no-tabs": 2,
    "eol-last": 2,
    "prefer-const": 2,
    "sort-keys": ["error", "asc", {"caseSensitive": false, "natural": false}],
    "sort-vars": ["error", { "ignoreCase": true }]
  }
}
